{
  "name": "studio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/studio",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/studio",
        "outputPath": "dist/apps/studio"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/studio"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "studio:build",
        "dev": true,
        "hostname": "localhost",
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "studio:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "studio:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "studio:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/studio"],
      "options": {
        "jestConfig": "apps/studio/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/studio/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "metadata": {
          "images": ["rollouts/studio"],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha,prefix=sha-"
          ]
        }
      }
    },
    "podman": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "podman",
        "metadata": {
          "images": ["rollouts/studio"],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha,prefix=sha-"
          ]
        }
      }
    },
    "kaniko": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "kaniko",
        "no-cache": true,
        "metadata": {
          "images": ["rollouts/studio"],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha,prefix=sha-"
          ]
        }
      }
    }
  },
  "tags": ["type:app", "scope:studio"]
}
