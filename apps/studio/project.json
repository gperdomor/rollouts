{
  "name": "studio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/studio",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/studio",
        "outputPath": "dist/apps/studio"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/studio"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "studio:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "studio:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "studio:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "studio:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/studio/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/studio/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker"
      },
      "configurations": {
        "dev": {
          "tags": ["rollouts/studio:dev"],
          "load": true
        },
        "ci": {
          "engine": "podman",
          "push": true,
          "quiet": true,
          "metadata": {
            "images": ["registry.gitlab.com/gperdomor/rollouts/studio"],
            "tags": [
              "type=schedule",
              "type=ref,event=branch",
              "type=ref,event=tag",
              "type=ref,event=pr",
              "type=semver,pattern={{version}}",
              "type=semver,pattern={{major}}.{{minor}}",
              "type=semver,pattern={{major}}",
              "type=sha,prefix=sha-"
            ]
          }
        }
      },
      "dependsOn": ["build"],
      "defaultConfiguration": "dev"
    }
  },
  "tags": ["type:app", "scope:studio"]
}
